<Window x:Class="PerkingRezerWPFDM.Views.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Pojazd" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Numer Rejestracyjny:" />
            <TextBox x:Name="LicensePlateTextBox" Width="200"/>

            <TextBlock Text="Marka:" />
            <TextBox x:Name="BrandTextBox" Width="200"/>

            <TextBlock Text="Model:" />
            <TextBox x:Name="ModelTextBox" Width="200"/>

            <TextBlock Text="Rodzaj Pojazdu:" />
            <ComboBox x:Name="VehicleTypeComboBox" Width="200"/>

            <TextBlock Text="Rodzaj Paliwa:" />
            <ComboBox x:Name="FuelTypeComboBox" Width="200"/>

            <TextBlock Text="Rok:" />
            <TextBox x:Name="YearTextBox" Width="200"/>

            <Button Content="Dodaj" Width="100" Margin="10" Click="AddVehicleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
