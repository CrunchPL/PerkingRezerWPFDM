<Window x:Class="PerkingRezerWPFDM.Views.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj Rezerwację" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Godzina rozpoczęcia" />
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="StartHourComboBox" Width="60"/>
                <TextBlock Text=":" VerticalAlignment="Center"/>
                <ComboBox x:Name="StartMinuteComboBox" Width="60"/>
            </StackPanel>

            <TextBlock Text="Godzina zakończenia" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="EndHourComboBox" Width="60"/>
                <TextBlock Text=":" VerticalAlignment="Center"/>
                <ComboBox x:Name="EndMinuteComboBox" Width="60"/>
            </StackPanel>

            <Button Content="OK" Click="OkButton_Click" Margin="0,10,0,0" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
