<Window x:Class="PerkingRezerWPFDM.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmień hasło" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nowe hasło:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Potwierdź hasło:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Zmień" Width="100" Click="ChangePassword_Click"/>
                <Button Content="Anuluj" Width="100" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
